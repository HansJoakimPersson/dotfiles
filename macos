###############################################################################
# Transmission.app                                                            #
###############################################################################

# Use `~/Documents/Torrents` to store incomplete downloads
sudo defaults write org.m0k.transmission UseIncompleteDownloadFolder -bool true
sudo defaults write org.m0k.transmission IncompleteDownloadFolder -string ${HOME}/Documents/Torrents

# Use `~/Downloads` to store completed downloads
sudo defaults write org.m0k.transmission DownloadLocationConstant -bool true

# Don’t prompt for confirmation before downloading
sudo defaults write org.m0k.transmission DownloadAsk -bool false
sudo defaults write org.m0k.transmission MagnetOpenAsk -bool false

# Don’t prompt for confirmation before removing non-downloading active transfers
sudo defaults write org.m0k.transmission CheckRemoveDownloading -bool true

# Trash original torrent files
sudo defaults write org.m0k.transmission DeleteOriginalTorrent -bool true

# Hide the donate message
sudo defaults write org.m0k.transmission WarningDonate -bool false
# Hide the legal disclaimer
sudo defaults write org.m0k.transmission WarningLegal -bool false

# IP block list.
# Source: https://giuliomac.wordpress.com/2014/02/19/best-blocklist-for-transmission/
sudo defaults write org.m0k.transmission BlocklistNew -bool true
sudo defaults write org.m0k.transmission BlocklistURL -string 'http://john.bitsurge.net/public/biglist.p2p.gz'
sudo defaults write org.m0k.transmission BlocklistAutoUpdate -bool true

# Randomize port on launch
sudo defaults write org.m0k.transmission RandomPort -bool true

