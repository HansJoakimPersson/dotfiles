###############################################################################
# Kill affected applications                                                  #
###############################################################################

# Need to restart for several changes to take effect. Trackpad settings in particular.
printf "Doing a soft restart of affected apps. You should restart when everything is finished."

for app in "Activity Monitor" \
	"Address Book" \
	"Calendar" \
	"cfprefsd" \
	"Contacts" \
	"ControlStrip" \
	"Dock" \
	"Finder" \
	"Google Chrome Canary" \
	"Google Chrome" \
	"Mail" \
	"Messages" \
	"Opera" \
	"Photos" \
	"Safari" \
	"SizeUp" \
	"Spectacle" \
	"SystemUIServer" \
	"TextEdit" \
	"Transmission" \
	"Tweetbot" \
	"Twitter" \
	"iCal"; do
	sudo killall "${app}" &>/dev/null
done
printf "Done! Note that some of these changes require a logout/restart to take effect.\n\n"
