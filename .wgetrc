# General
timestamping=on       # Use server-provided last mod date
timeout=60            # 60s timeout (default read timeout: 15min)
server_response=on    # Print server responses
robots=off            # Ignore `robots.txt` & `<meta name=robots content=nofollow>`
trust_server_names=on # Use last component of redirect URL for local filename
adjust_extension=on   # Append .html or .css to files missing extensions

# Recursive
no_parent=on          # Avoid ascending directory when downloading recursively
follow_ftp=on         # Follow FTP links in HTML by default

# Retries
tries=3               # Retry thrice on download failure (default: 20 times)
retry_connrefused=on  # Retry on connection refused

# User agent (uncomment if needed)
user_agent=Mozilla/5.0 (compatible; MSIE 9.0; Windows NT 6.1; Trident/5.0) # Mimic IE 9 on Win 7

